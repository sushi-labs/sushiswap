                        }));
                        const contextType = `export type ${unifiedContextIdentifier} = ${results
                            .map(r => { var _a; return (_a = r === null || r === void 0 ? void 0 : r.context) === null || _a === void 0 ? void 0 : _a.identifier; })
                            .filter(Boolean)
                            .join(' & ')} & BaseMeshContext;`;
                        const importCodes = [
