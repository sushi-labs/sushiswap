const Ethash = require('../index.js')
const Block = require('ethereumjs-block')
const tape = require('tape')
const levelup = require('levelup')
const memdown = require('memdown')
const async = require('async')

var cacheDB = levelup('', {
  db: memdown
})

tape('testing good block', function (t) {
  t.plan(3)

  var e = new Ethash(cacheDB)

  // run tests
  async.series([genesisBlock, validBlockTest, invalidblockTest])

  function genesisBlock (cb) {
    var genesis = new Block()
    genesis.setGenesisParams()
    e.verifyPOW(genesis, function (result) {
      t.assert(result, 'genesis block should be valid')
      cb()
    })
  }

  function validBlockTest (cb) {
    var validblockRlp =
      ''

    var validblock = new Block(Buffer.from(validblockRlp, 'hex'))

    e.verifyPOW(validblock, function (result) {
      t.assert(result, 'should be valid')
      cb()
    })
  }

  function invalidblockTest (cb) {
    var invalidblockRlp =
      ''

    var invalidblock = new Block(Buffer.from(invalidblockRlp, 'hex'))

    e.verifyPOW(invalidblock, function (result) {
      t.assert(!result, 'should be invalid')
      cb()
    })
  }
})
