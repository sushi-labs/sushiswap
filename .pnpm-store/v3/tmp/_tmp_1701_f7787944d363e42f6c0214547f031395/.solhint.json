{
  "extends": "solhint:recommended",
  "plugins": ["prettier"],
  "rules": {
    "func-visibility": ["error",{"ignoreConstructors":false}],
    "avoid-throw": "error",
    "avoid-suicide": "error",
    "avoid-sha3": "warn",
    "compiler-version": "off",
    "max-states-count": ["error", 18],
    "max-line-length": ["warn", 145],
    "not-rely-on-time": "warn",
    "quotes": ["error","double"],
    "prettier/prettier": "on"
  }
}
