{
  "extends": ["//"],
  "pipeline": {
    "build": {
      "inputs": [
        "public",
        "src/**",
        "package.json",
        "next.config.mjs",
        "postcss.config.js",
        "sentry.client.config.ts",
        "sentry.edge.config.ts",
        "sentry.server.config.ts",
        "tailwind.config.js",
        "tsconfig.json"
      ],
      "outputs": [".next/**", "!.next/cache/**"],
      "dependsOn": ["^build"],
      "dotEnv": [
        ".env.production.local",
        ".env.local",
        ".env.production",
        ".env"
      ]
    },

    "check": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "dev": {
      "dependsOn": ["^build"],
      "dotEnv": [".env.development.local", ".env.local", ".env.development", ".env"],
      "cache": false,
      "persistent": true
    },
    "test": {
      "inputs": ["test/**"],
      "outputs": ["test-results/**"],
      "dependsOn": ["build"],
      "dotEnv": [".env.test.local", ".env.test", ".env"]
    }
  }
}
